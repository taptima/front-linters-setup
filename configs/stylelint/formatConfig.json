{
  "extends": ["stylelint-config-standard", "stylelint-config-prettier", "./baseConfig"],
  "plugins": ["stylelint-scss", "stylelint-order"],
  "rules": {
    "indentation": 4,
    "at-rule-no-unknown": null,
    "scss/at-rule-no-unknown": true,
    "color-hex-length": "long",
    "value-keyword-case": "lower",
    "string-quotes": "single",
    "no-extra-semicolons": true,
    "no-empty-first-line": true,
    "at-rule-empty-line-before": [
      "always",
      {
        "except": ["blockless-after-same-name-blockless", "first-nested"],
        "ignore": ["after-comment"]
      }
    ],
    "order/properties-order": [
      [
        "content",
        "position",
        "display",
        "flex",
        "flex-direction",
        "align-items",
        "justify-content",
        "align-content",
        "flex-wrap",
        "flex-grow",
        "flex-shrink",
        "flex-basis",
        "columns",
        "columns-count",
        "columns-width",
        "columns-gap",
        "width",
        "min-width",
        "max-width",
        "height",
        "min-height",
        "max-height",
        "margin",
        "margin-top",
        "margin-right",
        "margin-bottom",
        "margin-left",
        "padding",
        "padding-top",
        "padding-right",
        "padding-bottom",
        "padding-left",
        "border",
        "border-top",
        "border-right",
        "border-bottom",
        "border-left",
        "border-width",
        "border-top-width",
        "border-right-width",
        "border-bottom-width",
        "border-left-width",
        "border-radius",
        "border-color",
        "border-top-color",
        "border-right-color",
        "border-bottom-color",
        "border-left-color",
        "background",
        "background-color",
        "background-image",
        "background-repeat",
        "background-size",
        "background-position",
        "background-attachment",
        "list-style",
        "list-style-type",
        "list-style-image",
        "list-style-position",
        "opacity",
        "transform",
        "box-shadow",
        "fill",
        "color",
        "font",
        "font-size",
        "line-height",
        "font-weight",
        "font-style",
        "text-align",
        "text-decoration",
        "text-transform"
      ],
      {
        "unspecified": "bottom"
      }
    ]
  }
}
